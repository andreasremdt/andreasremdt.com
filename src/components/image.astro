---
import type { Image } from "types/index";

export type Props = astroHTML.JSX.ImgHTMLAttributes & {
  image: Image;
};

const { image, loading = "lazy", ...props } = Astro.props;
---

{
  image && (
    <picture>
      <source srcset={image.webp} type="image/webp" />
      <img {...props} src={image.jpg} loading={loading} />
    </picture>
  )
}
