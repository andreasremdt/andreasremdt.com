---
export type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<header class="text-center bg-slate-50 py-16">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="font-serif text-2xl sm:text-4xl font-bold text-slate-900 mb-2">
      {title}
    </h1>
    <p class="sm:text-lg">{description}</p>
  </div>
</header>
