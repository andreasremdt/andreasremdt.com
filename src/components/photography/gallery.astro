---
import Image from "components/image.astro";
import { getGalleryBySlug } from "lib/hygraph";

const images = await getGalleryBySlug("photography-collection");
---

<figure data-gallery>
  {
    images.map((image) => (
      <a href={image.original} class="overflow-hidden rounded-md shadow-lg ">
        <Image
          image={image}
          width="300"
          height="300"
          class="transition-all duration-500 ease-in-out hover:scale-110 hover:opacity-80 focus:scale-110 focus:opacity-80"
        />
      </a>
    ))
  }
</figure>

<script>
  import Macy from "macy";

  Macy({
    container: document.querySelector("[data-gallery]"),
    margin: 15,
  });
</script>
