---
import Layout from "layouts/layout.astro";
import Hero from "components/home/hero.astro";
import Biography from "components/home/biography.astro";
import Technologies from "components/home/technologies.astro";
import FeaturedProjects from "components/home/featured-projects.astro";
import Testimonials from "components/home/testimonials.astro";
import BlogPosts from "components/home/blog-posts.astro";
